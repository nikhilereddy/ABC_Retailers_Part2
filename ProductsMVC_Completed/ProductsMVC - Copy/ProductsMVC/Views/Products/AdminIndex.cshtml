<h2>Product List</h2>

@if (Model == null || Model.Count == 0)
{
    <p>No products available.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Location</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.Description</td>
                    <td>@product.price</td>
                    <td>@product.Location</td>
                    <td><img src="@product.ImageUrl" alt="Product Image" style="max-height: 100px; max-width: 100px;" /></td>
                    <td>
                        <form asp-action="EditProduct" method="get" style="display:inline;">
                            <input type="hidden" name="partitionKey" value="@product.PartitionKey" />
                            <input type="hidden" name="rowKey" value="@product.RowKey" />
                            <button type="submit" class="btn btn-primary">Edit</button>
                        </form>

                        <form asp-action="DeleteProduct" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this product?');">
                            <input type="hidden" name="partitionKey" value="@product.PartitionKey" />
                            <input type="hidden" name="rowKey" value="@product.RowKey" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
