@model List<string>

@{
    ViewData["Title"] = "Orders";
}

<h2>@ViewData["Title"]</h2>

<p class="lead mb-4">Below is the list of current messages related to your orders. Please review the details and take necessary actions.</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Order Message</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || Model.Count == 0)
        {
            <tr>
                <td colspan="1" class="text-center">No messages found.</td>
            </tr>
        }
        else
        {
            @foreach (var message in Model)
            {
                <tr>
                    <td>@message</td>
                </tr>
            }
        }
    </tbody>
</table>

<!-- Optional: Include a link to another page or action if needed -->
<div class="mt-4">
    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Dashboard</a>
</div>
