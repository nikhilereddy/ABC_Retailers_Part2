@{
    ViewData["Title"] = "Login";
}

<div class="container mt-4">
    <h2 class="mb-3">Customer Login</h2>
    <p class="lead mb-4">Welcome back! Please enter your details below to access your account and continue shopping with us.</p>
    <form asp-action="Login" method="post" class="bg-light p-4 rounded shadow-sm text-black">
        <div class="form-group mb-3">
            <label for="email" class="form-label">Email Address</label>
            <input type="email" name="email" class="form-control" id="email" placeholder="Enter your email" required>
        </div>
        <div class="form-group mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="password" class="form-control" id="password" placeholder="Enter your password" required>
        </div>
        <button type="submit" class="btn btn-primary">Log In</button>
    </form>
    <div class="mt-3">
        <p class="mb-0">New to ABC Retail? <a href="@Url.Action("SignUp", "Users")" class="text-success-link">Sign up here</a></p>
    </div>

</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            var message = '@TempData["RedirectMessage"]';
            if (message) {
                toastr.warning(message);
            }
        });
    </script>
}
